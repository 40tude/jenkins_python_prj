version: '3.8'

services:
  jenkins:
    image: jenkins/jenkins:lts-jdk17
    container_name: jenkins
    restart: unless-stopped
    networks:
      - jenkins
    ports:
      - "8086:8080"    # Host 8086 â†’ Container 8080 (Jenkins UI)
      - "50000:50000"  # For Jenkins agents (JNLP)
    volumes:
      - jenkins_home:/var/jenkins_home
      - //var/run/docker.sock:/var/run/docker.sock
    user: root
    command: >
      bash -c "apt-get update && apt-get install -y docker.io &&
               usermod -aG docker jenkins &&
               exec /usr/local/bin/jenkins.sh"

networks:
  jenkins:

volumes:
  jenkins_home:
    external: true    # ğŸ”¹ Indique Ã  Docker Compose de rÃ©utiliser un volume existant
